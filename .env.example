# ====================================================================
# StreamRoom — Root environment variables
# Copy this file to .env and fill in your values.
# .env is gitignored and never committed.
# ====================================================================

# ── Database ─────────────────────────────────────────────────────────
DB_USERNAME=streamroom_user
DB_PASSWORD=change_me_strong_password

# ── JWT ──────────────────────────────────────────────────────────────
# Generate with: openssl rand -hex 64
JWT_SECRET=replace_with_64_char_random_string

# ── Admin account (created on first startup) ─────────────────────────
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_strong_password

# ── Twitch API ────────────────────────────────────────────────────────
# Get these from https://dev.twitch.tv/console
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_ACCESS_TOKEN=your_twitch_access_token_here

# ── CORS ──────────────────────────────────────────────────────────────
# Set to your server's public URL (e.g. http://123.45.67.89 or https://yourdomain.com)
CORS_ALLOWED_ORIGINS=http://localhost

# ── Frontend ──────────────────────────────────────────────────────────
VITE_TWITCH_CHANNEL=your_twitch_channel_name
VITE_TWITCH_CLIENT_ID=your_twitch_client_id_here
